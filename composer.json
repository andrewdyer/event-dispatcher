{
  "name": "andrewdyer/event-dispatcher",
  "description": "A simple event dispatcher that you can fit into the framework of your choice",
  "type": "library",
  "autoload": {
    "psr-4": {
      "AndrewDyer\\EventDispatcher\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "AndrewDyer\\EventDispatcher\\Tests\\": "tests/"
    }
  },
  "require": {
    "php": "^8.3"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.75",
    "phpunit/phpunit": "^10.5"
  },
  "scripts": {
    "cs": "php-cs-fixer fix",
    "test": "phpunit"
  },
  "config": {
    "sort-packages": true
  },
  "minimum-stability": "stable"
}
